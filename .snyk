# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.22.1

# Ignore specific vulnerabilities that are false positives or low risk
ignore: {}

# Language-specific configuration
language-settings:
  javascript:
    # Set minimum severity level
    minimum-severity: medium
    
    # Ignore development dependencies in production
    dev-dependencies: false

# Patches applied to specific vulnerabilities
patches: {}

# Package-specific configuration
package-settings:
  # Skip packages that are only used in development
  "@types/*": dev-only
  "jest": dev-only
  "typescript": dev-only