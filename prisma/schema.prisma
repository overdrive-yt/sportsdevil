  currency              String                @default("gbp")
  status                StripePaymentStatus
  paymentMethod         String?               // card, bank_transfer, etc.
  
  // Customer info
  customerEmail         String
  customerName          String?
  billingAddress        String?               // JSON
  shippingAddress       String?               // JSON
  
